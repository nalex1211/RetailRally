@model List<Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>My Products</title>
    <style>
        .my-image {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 8px;
            margin: auto;
        }

        .clickable-card {
            cursor: pointer;
            transition: transform 0.3s ease, border 0.3s ease;
            border: 2px solid transparent;
            border-radius: 5px;
        }

            .clickable-card:hover {
                border: 2px solid #007bff;
            }

        .no-outline:hover {
            border: 2px solid transparent;
            transform: none;
        }

        .btn-add-to-cart {
            margin-right: 10px;
        }

        .card-img-container {
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            width: 100%;
            height: 300px;
        }

        nav.container-fluid {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: #222222;
        }

            nav.container-fluid ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                gap: 1rem;
            }

                nav.container-fluid ul li a {
                    text-decoration: none;
                    color: white;
                    padding: 0.5rem 1rem;
                    transition: background-color 0.3s, color 0.3s;
                }

                    nav.container-fluid ul li a:hover,
                    nav.container-fluid ul li a:focus {
                        background-color: #007bff; 
                        color: white;
                        border-radius: 0.25rem;
                    }

                    nav.container-fluid ul li a[role="button"] {
                        background-color: #007bff; 
                        border-radius: 0.25rem;
                    }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cards = document.querySelectorAll('.clickable-card');

            cards.forEach(function (card) {
                card.addEventListener('click', function () {
                    window.location.href = this.getAttribute('data-url');
                });

                var editButton = card.querySelector('.btn-primary');
                var deleteButton = card.querySelector('.btn-danger')

                deleteButton.addEventListener('mouseenter', function () {
                    card.classList.add('no-outline');
                });

                deleteButton.addEventListener('mouseleave', function () {
                    card.classList.remove('no-outline');
                });

                editButton.addEventListener('mouseenter', function () {
                    card.classList.add('no-outline');
                });

                editButton.addEventListener('mouseleave', function () {
                    card.classList.remove('no-outline');
                });
            });
        });

    </script>
</head>
<body>
    <nav class="container-fluid">
        <ul>
            <li><strong>My Products</strong></li>
        </ul>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#" role="button">Contact</a></li>
        </ul>
    </nav>
    <main>
        <div class="container mt-4">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 clickable-card" data-url="@Url.Action("GoToDetailsPage", new { productId = product.Id })">
                            <div class="card-img-container d-flex justify-content-center">
                                <img class="card-img-top my-image" src="@product.PictureUrl" alt="Product Image">
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">Name: @product.Name</h5>
                                <h5 class="card-title">Category: @product.Category.Name</h5>
                                <p class="card-text">Price: $@product.Price.ToString("0.00")</p>
                                <div class="mt-auto d-flex justify-content-between">
                                    <a asp-route-productId="@product.Id" asp-action="GoToProductEditPage" class="btn btn-primary btn-sm">Edit</a>
                                    <form asp-action="DeleteProduct" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button class="btn btn-danger btn-sm btn-add-to-cart">
                                             Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </main>
</body>
</html>



