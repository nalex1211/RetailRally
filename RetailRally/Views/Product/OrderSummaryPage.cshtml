@model Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Підсумок замовлення</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@1/css/pico.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1c1e21;
            color: #e1e1e1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        header, footer {
            text-align: center;
            padding: 20px;
            background-color: #2c2f33;
        }

            header h1, footer small {
                color: #f1f1f1;
            }

        nav ul {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        nav a {
            color: #f1f1f1;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #3a3f47;
            transition: background-color 0.3s;
        }

            nav a:hover {
                background-color: #5a5f67;
            }

        .main-content {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 20px;
        }

        .order-details, .products-list {
            flex: 1;
            background-color: #2c2f33;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .order-details h2, .products-list h2 {
                border-bottom: 2px solid #3a3f47;
                padding-bottom: 10px;
                margin-bottom: 20px;
            }

        .product-card {
            display: flex;
            gap: 20px;
            border: 1px solid #3a3f47;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
        }

            .product-card img {
                width: 150px;
                height: 150px;
                object-fit: cover;
                border-right: 1px solid #3a3f47;
            }

        .product-card-details {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        footer a {
            color: #818181;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <h1>Підсумок замовлення</h1>
    </header>

    <nav class="container">
        <ul>
            <li><a asp-action="AllProducts">Товари</a></li>
            <li><a asp-action="MyOrders" role="button">Мої замовлення</a></li>
        </ul>
    </nav>

    <main class="container main-content">
        <div class="order-details">
            <h2>Деталі вашого замовлення</h2>
            <p><strong>Код замовлення:</strong> @Model.Id</p>
            <p><strong>Повне ім'я:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Електронна пошта:</strong> @Model.Email</p>
            <p><strong>Загальна ціна:</strong> $@String.Format("{0:F2}", Model.TotalPrice)</p>
            <p><strong>Доставка:</strong> @Model.ShippingType?.Name</p>
            <p><strong>Оплата:</strong> @Model.PaymentType?.Name</p>
        </div>

        <div class="products-list">
            <h2>Товари</h2>
            @foreach (var op in Model.OrderProducts)
            {
                <div class="product-card">
                    <img src="@op.Product.PictureUrl" alt="Product Image">
                    <div class="product-card-details">
                        <p><strong>Назва товару:</strong> @op.Product.Name</p>
                        <p><strong>Кількість:</strong> @op.Quantity</p> 
                        <p><strong>Ціна:</strong> $@String.Format("{0:F2}", op.Product.Price)</p>
                        <p><strong>Всього:</strong> $@String.Format("{0:F2}", op.Product.Price * op.Quantity)</p>
                    </div>
                </div>
            }
        </div>
    </main>

    <footer class="container">
        <small>
            <a href="#">Політика конфіденційності</a> • <a href="#">Умови надання послуг</a>
        </small>
    </footer>
</body>
</html>
