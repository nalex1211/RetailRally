@model List<ShippingType>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Всі типи доставки</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pico.css/dist/pico.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #1c1e21;
            color: #ecf0f1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #ecf0f1;
        }

        .shipping-type-card {
            border: 1px solid #34495e;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #3a3f47;
            transition: all 0.3s ease;
        }

            .shipping-type-card:hover {
                box-shadow: 0 0 10px #5a5f67;
                cursor: pointer;
            }

        .shipping-type-details p {
            margin: 5px 0;
        }

        .add-shipping-type {
            margin-bottom: 20px;
            text-align: center;
        }

            .add-shipping-type form {
                display: none;
                flex-direction: column;
                align-items: center;
                background-color: #2c2f33;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                margin-top: 20px;
            }

                .add-shipping-type form input,
                .add-shipping-type form button {
                    margin-bottom: 10px;
                    width: 80%;
                }

        .btn-toggle {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-toggle:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <main class="container">
        <h1>Всі типи доставки</h1>
        <div class="add-shipping-type">
            <button class="btn-toggle" onclick="toggleForm()">Додати тип доставки</button>
            <form id="addShippingTypeForm">
                <input type="text" name="Name" placeholder="Назва типу доставки">
                <button type="button" class="btn btn-primary" onclick="addShippingType()">Додати тип доставки</button>
            </form>
        </div>
        <div id="shippingTypesContainer">
            @if (Model.Count == 0)
            {
                <h2>Не знайдено жодного типу доставки.</h2>
            }
            else
            {
                @foreach (var shippingType in Model)
                {
                    <div class="shipping-type-card">
                        <div class="shipping-type-details">
                            <p><strong>ID:</strong> @shippingType.Id</p>
                            <p><strong>Назва:</strong> @shippingType.Name</p>
                        </div>
                    </div>
                }
            }
        </div>
    </main>
    <script>
        function toggleForm() {
            var form = document.getElementById('addShippingTypeForm');
            if (form.style.display === 'none' || form.style.display === '') {
                form.style.display = 'flex';
            } else {
                form.style.display = 'none';
            }
        }

        function addShippingType() {
            var form = document.getElementById('addShippingTypeForm');
            var formData = new FormData(form);
            var name = formData.get('Name');

            fetch('@Url.Action("AddShippingType", "Admin")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ Name: name })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var newCard = document.createElement('div');
                        newCard.className = 'shipping-type-card';
                        newCard.innerHTML = `
                                        <div class="shipping-type-details">
                                            <p><strong>ID:</strong> ${data.id}</p>
                                            <p><strong>Назва:</strong> ${data.name}</p>
                                        </div>
                                    `;
                        document.getElementById('shippingTypesContainer').appendChild(newCard);
                        form.style.display = 'none';
                        form.reset();
                        Swal.fire({
                            title: 'Тип доставки додано успішно!',
                            icon: 'success',
                            showConfirmButton: false,
                            timer: 1000
                        });
                    } else {
                        Swal.fire({
                            title: 'Тип доставки повинен мати назву!',
                            icon: 'error',
                            showConfirmButton: true
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Помилка',
                        text: 'Не вдалося додати тип доставки',
                        icon: 'error',
                        showConfirmButton: true
                    });
                });
        }
    </script>
</body>
</html>
